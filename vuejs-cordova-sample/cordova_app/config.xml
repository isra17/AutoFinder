<?xml version='1.0' encoding='utf-8'?>
<widget id="vuejs.cordova.sample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AutoFinder</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="frederick.parsons92@gmail.com" href="http://cordova.io">
        Frederick Parsons
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenBackgroundColor" value="#FFFFFF" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="BackgroundColor" value="#FFFFFF" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#313AA5" />
    <preference name="HeaderColor" value="#313AA5" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <splash density="port-hdpi" src="res/screen/android/drawable-hdpi/splash.png" />
        <splash density="port-ldpi" src="res/screen/android/drawable-ldpi/splash.png" />
        <splash density="port-mdpi" src="res/screen/android/drawable-mdpi/splash.png" />
        <splash density="port-xhdpi" src="res/screen/android/drawable-xhdpi/splash.png" />
        <splash density="port-xxhdpi" src="res/screen/android/drawable-xxhdpi/splash.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/drawable-xxxhdpi/splash.png" />
    </platform>
    <platform name="android">
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi/autofinder.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi/autofinder.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/autofinder.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/autofinder.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/autofinder.png" />
    </platform>
    <engine name="android" spec="^6.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.4" />
    <plugin name="cordova-plugin-vibration" spec="^2.1.6" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="cordova-plugin-headercolor" spec="^1.0.0" />
    <plugin name="cordova-plugin-android-window-background" spec="^1.0.1">
        <variable name="WINDOW_BACKGROUND_COLOR" value="#ffffff" />
    </plugin>
    <plugin name="phonegap-nfc" spec="^0.6.6" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.2" />
    <plugin name="cordova-plugin-local-notification" spec="^0.8.4" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
</widget>
